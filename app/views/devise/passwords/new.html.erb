<body>
  <div class="password-new">
    <div class="password-each-first">
      <h2>パスワードを忘れた場合</h2>
    </div>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="password-each-first">
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", maxlength: 77  %>
        </div>
      </div>  
      <div class="password-each">
        <p>
          ※上記のアドレスに対して新しいパスワードを作成するフォームを送信します。
        </p>
      </div>
      <div class="password-each">
        <div class="actions">
          <%= f.submit "送信" , class: "form-button"%>
        </div>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</body>